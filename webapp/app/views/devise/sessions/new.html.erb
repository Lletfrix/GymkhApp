<div class="container bg-1 text-center">

    <div class="container-fluid text-center bg-1">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'button', style: 'vertical-align:middle; margin-top: 10px' %>
  </div>
<% end %>

  <div class="row" style="margin-top:15px">
    <div class="col-xs-6 text-right">Are you new?</div>
    <div class="col-xs-6 text-left"><%= link_to 'Create an account', new_user_registration_path %></div>
  </div>
</div>
